<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Transit-->
    <RelativeLayout
        android:id="@+id/transit_get_off"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <RelativeLayout
            android:id="@+id/exit_icon_room"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <View
                android:id="@+id/view2"
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#8e44ad" />

            <TextView
                android:id="@+id/exit_icon"
                android:layout_marginTop="8dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="â–¼"
                android:textColor="@android:color/white"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/walk_circle1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@+id/exit_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_dots" />

            <TextView
                android:id="@+id/walk_circle2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@+id/walk_circle1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_dots" />

            <TextView
                android:id="@+id/walk_circle3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@+id/walk_circle2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_dots" />

            <TextView
                android:id="@+id/walk_circle4"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@+id/walk_circle3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_dots" />

            <TextView
                android:id="@+id/walk_circle5"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@+id/walk_circle4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_dots" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transit_room"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/exit_icon_room">

            <TextView
                android:id="@+id/transit"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:text="Titiwangsa"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/door_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/transit"
                android:layout_marginTop="2dp"
                android:text="Left Door"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/walk_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/door_direction"
                android:layout_marginTop="5dp"
                android:text="Transfer | 2 mins"
                android:textSize="12sp" />


        </RelativeLayout>

    </RelativeLayout>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <RelativeLayout
        android:id="@+id/transit_get_on"
        android:layout_below="@+id/transit_get_off"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <RelativeLayout
            android:id="@+id/get_on_icon_room"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/get_on_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_centerHorizontal="true"
                android:background="@drawable/circle2"
                android:gravity="center"

                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="8dp"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#229954" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/get_on_room"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/get_on_icon_room">

            <TextView
                android:id="@+id/get_on"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Titiwangsa"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/get_on_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/get_on"
                android:layout_marginTop="2dp"
                android:text="Kajang"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/get_on_number_of_stops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/get_on_direction"
                android:layout_marginTop="5dp"
                android:text="5 stops | 10 mins"
                android:textSize="12sp" />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>